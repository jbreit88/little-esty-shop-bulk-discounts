<h1>New Bulk Discount:</h1>

<%= form_with url: merchant_bulk_discounts_path(@merchant.id), method: :post, local: true do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, required: :true %><br><br>

  <%= f.label :percent_discount, 'Percent Discount' %>
  <%= f.number_field :percent_discount, in: 1..100, required: :true %><br><br>

  <%= f.label :threshold, "Min. Number of Items" %>
  <%= f.number_field :threshold, required: :true %><br><br>

  <%= f.submit 'Create New Discount' %><br>
<% end %>
